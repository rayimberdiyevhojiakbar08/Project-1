<%- include('../partial/navbar') %>
<h1 class="mt-3 text-center" style="color: #00ffff;" ><%= title %> Soni: <%= dataresult.length %></h1>
  <table  class="table table-dark table-hover mt-5">
      <thead>
        <tr>
          <!-- <th scope="col">#</th> -->
          <th scope="col" style="color: #00FFFF;">â„–</th>
          <th scope="col" style="color: #00FFFF;">Ismi Familyasi</th>
          <th scope="col" style="color: #00FFFF;">Telefon raqami</th>
          <th scope="col" style="color: #00FFFF;"> Manzil</th>
          <th scope="col" style="color: #00FFFF;">Kun</th>
          <th scope="col" style="color: #00FFFF;">Soat</th>
          <th scope="col" style="color: #00FFFF;">Ustaning Ismi</th>
          <th scope="col" style="color: #00FFFF;">Buyurtma Nomi</th>
          <th scope="col" style="color: #00FFFF;">Buyurtma turi</th>
          <th scope="col" style="color: #00FFFF;">Narxi</th>
          <th scope="col" style="color: #00FFFF;">Keshbek(F.Q.P)</th>
          <th scope="col" style="color: #00FFFF;">Tahrirlash</th>
          <th scope="col" style="color: #00FFFF;">O'chirish</th>
        </tr>
      </thead>
      <tbody>
        <% if(dataresult === 0 ){ %>  
              <h1 style="color: #00ffff;" class="text-center"><%= dataresult %></h1>
          <% }else { %>
           <% dataresult.forEach((result, index) => { %>  
        <tr>
          <!-- <th scope="row">1</th> -->
          <td style="color: #00ffff;"><%= index + 1 %></td>
          <td style="color: #099FFF;"><%= result.namesure %></td>
          <td style="color: #00FF00;"><%= result.number %></td>
          <td style="color: #FD1C03;"><%= result.adress %></td>
          <td style="color: #FFFF33;"><%= result.day %></td>
          <td style="color: #FFFF33;"><%= result.time %></td>
          <td style="color: #CC00FF;"><%= result.mastername %></td>
          <td style="color: #FF00FF;"><%= result.ordername %></td>
          <td style="color: #FF00FF;"><%= result.ordertype %></td>
          <td style="color: #00FF66;"><%= result.cost %> so'm</td>
          <td style="color: #00FF00;"><%= result.cost / 10 %> so'm</td>
          <td><a href="/edit/<%= result.id%>" class="btn btn-success btn-sm">Tahrirlash</a></td>
          <td><a href="/delete/<%= result.id%>" class="btn btn-danger btn-sm">O'chirish</a></td>
        </tr>
        <% })} %>
      </tbody>
    </table>
</div>