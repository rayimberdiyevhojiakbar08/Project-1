        <td style="color: #FFFF33;"><%= item.time %></td>
        <td style="color: #CC00FF;"><%= item.mastername %></td>
        <td style="color: #FF00FF;"><%= item.ordername %></td>
        <td style="color: #FF00FF;"><%= item.ordertype %></td>
        <td style="color: #00FF66;"><%= item.cost %> so'm</td>
        <td style="color: #00FF00;"><%= item.cost / 10 %> so'm</td>
        <td><a href="/edit/<%= item.id%>" class="btn btn-success btn-sm">Tahrirlash</a></td>
