    <tbody>
      <% clients.forEach((item, index) =>  { %>
      <tr>
        <th style="color: #00FFFF;"><%= index + 1 %></th>
        <td style="color: #099FFF;"><%= item.namesure %></td>
        <td style="color: #00FF00;"><%= item.number %></td>
        <td style="color: #FD1C03;"><%= item.adress %></td>
